<div class="card">
    <div class="card-content" id="article-{{this.id}}">
        <p class="title">
            {{this.headline}}
        </p>
        <p class="subtitle">
            {{this.summary}}
        </p>
    </div>
    <footer class="card-footer">
        <p class="card-footer-item">
            <span>
                View on <a href="{{this.url}}">NYTimes</a>
            </span>
        </p>
                <p class="card-footer-item">
            <span>
                {{> article-buttons}}
            </span>
        </p>
    </footer>

</div>
